<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lctec.kaoruartgalleryandroid.MainActivity"
    android:background="@color/kag_color"
    >


    <Button
        android:id="@+id/gallerybtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the Art Gallery"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="306dp"
        android:layout_height="88dp"
        app:layout_constraintBottom_toTopOf="@+id/gallerybtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256"
        app:srcCompat="@drawable/banner" />

    <TextView
        android:id="@+id/footertextview"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#424242"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="160dp"
        android:layout_height="141dp"
        app:layout_constraintBottom_toTopOf="@+id/footertextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gallerybtn"
        app:layout_constraintVertical_bias="0.507"
        app:srcCompat="@drawable/liked_no_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>
